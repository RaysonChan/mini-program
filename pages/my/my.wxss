/* pages/my/my.wxss */
/* 头像部分 */
.headPic{
  width: 100%;
  height: 300rpx;
  background-color: #66CCDD;
  position: relative;
}
.headPic .img{
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translate(-50%);
  border-radius: 50%;
  /* 圣光阴影效果 */
  box-shadow: 0rpx 0rpx 100rpx 10rpx #fff;
  overflow: hidden;
}
.block{
  margin: 30rpx 0;
  font-size: 30rpx;
}
.block view{
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 2rpx;
}